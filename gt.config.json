{
  "$schema": "https://assets.gtx.dev/config-schema.json",
  "defaultLocale": "en",
  "locales": ["zh", "es", "fr"],
  "files": {
    "json": {
      "include": ["./docs.json"]
    },
    "mdx": {
      "include": ["./**/*.mdx"],
      "transform": {
        "match": "^(snippets/)?(.*)$",
        "replace": "$1{locale}/$2"
      },
      "exclude": [
        "./[locales]/**/*.mdx",
        "./snippets/[locales]/**/*.mdx",
        "./snippets/counter.mdx"
      ]
    }
  },
  "options": {
    "jsonSchema": {
      "./docs.json": {
        "composite": {
          "$.navigation.languages": {
            "type": "array",
            "key": "$.language",
            "include": [
              "$..group",
              "$..tab",
              "$..item",
              "$..anchor",
              "$..dropdown"
            ],
            "transform": {
              "$..pages[*]": {
                "match": "^(.*)$",
                "replace": "{locale}/$1"
              },
              "$..openapi.*": {
                "match": "^/(.*)$",
                "replace": "/{locale}/$1"
              }
            }
          },
          "$.redirects": {
            "type": "array",
            "key": "$.language",
            "include": [],
            "transform": {
              "$.source": {
                "match": "^/(.*)$",
                "replace": "/{locale}/$1"
              },
              "$.destination": {
                "match": "^/(.*)$",
                "replace": "/{locale}/$1"
              }
            }
          }
        }
      }
    },
    "docsUrlPattern": "/[locale]",
    "docsImportPattern": "/snippets/[locale]",
    "experimentalLocalizeStaticImports": true,
    "experimentalLocalizeStaticUrls": true,
    "experimentalHideDefaultLocale": true
  }
}